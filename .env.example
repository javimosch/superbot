# Superbot Configuration
# Copy to .env and fill in values

# Server
PORT=3000
NODE_ENV=development

# LLM Provider (OpenAI-compatible)
OPENAI_API_KEY=sk-...
OPENAI_API_BASE=https://openrouter.ai/api/v1
DEFAULT_MODEL=anthropic/claude-sonnet-4-20250514

# Workspace
WORKSPACE_PATH=~/.superbot/workspace

# Telegram (optional)
TELEGRAM_BOT_TOKEN=
TELEGRAM_ENABLED=false

# WhatsApp Bridge (optional)
WHATSAPP_ENABLED=false
WHATSAPP_BRIDGE_PORT=3001

# Web Search (optional)
BRAVE_API_KEY=

# Admin Auth
ADMIN_USER=admin
ADMIN_PASS=changeme

# Heartbeat
HEARTBEAT_ENABLED=true
HEARTBEAT_INTERVAL_S=1800

# Agent
MAX_ITERATIONS=20
EXEC_TIMEOUT=60
EXEC_RESTRICT_WORKSPACE=false
